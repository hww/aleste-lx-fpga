# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Для Scala/Java-файлов (SpinalHDL)
[*.{scala,java}]
indent_size = 2
max_line_length = 120

# Для Verilog/VHDL
[*.{v,vhd,vhdl,sv}]
indent_size = 2
tab_width = 2

# Исключения для Makefile и CI
[Makefile]
indent_style = tab

[*.yml]
indent_size = 2